ScreenManager:
    do_rotation: False
    do_scale: False
    do_translation: False
    rotation: 90

<Ball>:
    
    size: "20dp","20dp"
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
<Paddle>:

    size: "40dp", "90dp"
    canvas:
        Color:
            rgba: (1, 0, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size


<Game>:

    do_rotation: False
    do_scale: False
    do_translation: False
    rotation: 90
    ball: pong_ball
    player1: player_left
    player2: player_right
    canvas:
        Rectangle:
            pos: self.center_x - 2.5 , 0
            size: 5 , self.height
            
    Label:

        font_size: "50dp" 
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        
        
    Label:

        font_size: "50dp"   
        center_x: root.width * 3 / 4
        top: root.top - 50 
        text: str(root.player2.score)

    Ball:

        id: pong_ball
        center: self.parent.center

    Paddle:

        id: player_left
        x: 20 + root.x
        center_y: root.center_y
        
    Paddle:
        id: player_right
        x: root.width - (self.width+20)
        center_y: root.center_y
   